<%= render "filenotes/header" %>
<div class='main-bar'>
  <p class='note'>>>Works</p>
  <%=link_to image_tag("plus.png"), new_work_path, class: 'plus' %>
</div>
<div class='head-border'>
</div>

<div class='account-page'>
  <div class='account-page__inner clearfix'>
    <div class='account-page__inner--right user-form'>
      <%= form_with url: works_path, method: :post, local: true do |f|%>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :サムネイルを選択してください%>
          </div>
          <div class='field-input'>
            <%= f.file_field :image, name:'work[image]', id:"work-image" %>
          </div>
          <div class='field-label'>
            <%= f.label :アプリケーション名%>
          </div>
          <div class='field-input'>
            <%= f.text_field :app_name, autofocus: true%>
          </div>
            <div class='field-label'>
              <%= f.label :URL%>
            </div>
            <div class='field-input'>
              <%= f.url_field :url, autocomplete: "off"%>
            </div>
            <div class='field-label'>
              <%= f.label :text%>
            </div>
            <div class='field-input'>
              <%= f.text_field :text, autocomplete: "off"%>
            </div>
          <div class='actions'>
            <%= f.submit "追加", class: 'btn'%>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
