<header class='top-page-header'>
  <div class='top-bar-contents'>
    <%= link_to image_tag("filenote-logo.png", class:"filenote-icon"), "/" %>
  </div>

  <div class='nav-bar'>
    <div class="home-btn"><%= link_to image_tag("home_white"), "/" %></div>
    <ul class='nav-lists'>
      <% if user_signed_in? %>
        <li><%= link_to current_user.name + "さんのページ", "#", class: "login" %></li>
        <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "sign-up" %></li>
      <% else %>
        <li><%= link_to 'ログイン', new_user_session_path, class: "login" %></li>
        <li><%= link_to '新規登録', new_user_registration_path, class: "sign-up" %></li>
      <% end %>
    </ul>
  </div>
</header>